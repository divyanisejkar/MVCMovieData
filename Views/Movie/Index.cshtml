
@model IEnumerable<MovieData.Models.MvcMovieContext>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMovie.cshtml";
}
@using Microsoft.AspNetCore.Http;
<div>
    <h1>Welcome @ViewBag.Message, to Movies App</h1>
</div>

<h2>Index</h2>
<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleseDate)
                </td>
                <td>
                    <a class="btn btn-info"  asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-primary" asp-action="Detail" asp-route-id="@item.Id">Detail</a> |
                    <a class="btn btn-danger"  asp-controller="Movie" asp-action="Delete"  asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>

</table>
<div>
    Welcome <h6><strong> @Context.Session.GetString("email")</strong></h6>

    <a class="btn btn-info" asp-controller="Movie" asp-action="logout">Logout</a>
    

</div>

